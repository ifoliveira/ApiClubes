<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Administracion</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            background: #1e2a38;
            color: #fff;
            padding: 2rem 1rem;
        }

        h2, h3 {
            text-align: center;
            margin-bottom: 1rem;
        }

        table {
            width: 100%;
            max-width: 600px;
            margin: 0 auto;
            border-collapse: collapse;
            background: #2e3d4f;
            border-radius: 12px;
            overflow: hidden;
        }

        th, td {
            padding: 0.75rem;
            text-align: center;
        }

        th {
            background: #4CAF50;
        }

        tr:nth-child(even) {
            background-color: #3a4b5c;
        }

        tr:nth-child(odd) {
            background-color: #2e3d4f;
        }

        tr.destacado {
            background-color: #f9d923;
            color: #000;
            font-weight: bold;
        }

        @media (max-width: 600px) {
            th, td {
                padding: 0.5rem;
                font-size: 0.95rem;
            }
        }

        button {
            display: block;
            margin: 1.5rem auto 0;
            padding: 0.75rem 2rem;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 1rem;
            font-weight: bold;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.2s;
        }

        button:hover {
            background-color: #45a049;
            transform: scale(1.05);
        }

        button:active {
            transform: scale(0.98);
        }

        .acciones {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 0.4rem;
        margin-top: 0.5rem;
        }

        .btn {
        margin: 0.2rem auto;
        padding: 0.4rem 0.8rem;
        font-size: 0.85rem;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        transition: transform 0.1s;
        display: block;
        width: 90px;
        }

        .btn:active {
        transform: scale(0.95);
        }

        .btn.sumar {
        background-color: #4CAF50;
        color: white;
        }

        .btn.restar {
        background-color: #f44336;
        color: white;
        }

        .btn.finalizar {
        background-color: #9C27B0;
        color: white;
        }

        .btn.iniciar {
        background-color: #2196F3;
        color: white;
        }

      .btn.icon-btn {
          background: none;
          border: none;
          color: #ccc;
          cursor: pointer;
          font-size: 1.1rem;
          padding: 0.2rem 0.4rem;
          margin-top: 0.5rem;
          transition: color 0.3s ease;
      }

      .btn.icon-btn:hover {
          color: #f9d923;
      }    

      .alert {
          padding: 1rem;
          margin: 1rem auto;
          max-width: 600px;
          border-radius: 8px;
          font-weight: bold;
          text-align: center;
      }

      .alert-error {
          background-color: #f44336;
          color: white;
      }

      .alert-success {
          background-color: #4CAF50;
          color: white;
      }


.selector-grupos a {
    background-color: #2e3d4f;
    color: #fff;
    padding: 0.5rem 1rem;
    border-radius: 10px;
    border: 2px solid transparent;
    font-weight: bold;
    text-decoration: none;
    transition: all 0.3s ease;
}

.selector-grupos a:hover {
    background-color: #4CAF50;
    color: #000;
}

.selector-grupos a.selected {
    background-color: #f9d923;
    color: #000;
    border: 2px solid #fff;
}

.selector-grupos {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 2rem;
}


    </style>
</head>
<body>


<h2>Seguimiento en Vivo ‚Äì {{ torneo.nombre }}</h2>

<div class="selector-grupos">
    <a href="{{ path('seguimiento_vivo', {
                slug: torneo.slug
            }) }}">
                INICIO
            </a>

    <a href="{{ path('seguimiento_vivo_grupos', {
                slug: torneo.slug
            }) }}">
                GRUPOS
            </a>  

    <a href="{{ path('seguimiento_vivo_final', {
                slug: torneo.slug
            }) }}">
                FASE FINAL
            </a>            
</div>

{% for label, messages in app.flashes %}
    {% for msg in messages %}
        <div class="alert alert-{{ label }}">
            {{ msg }}
        </div>
    {% endfor %}
{% endfor %}

{% set faseActual = null %}
{% for partido in partidos %}
    {% set fase = partido.fase ?? 'Fase de Grupos' %}

    {% if fase != faseActual %}
        {% if not loop.first %}
            </tbody></table>
        {% endif %}

        <h3 style="text-align: center; margin-top: 2rem;">{{ fase }}</h3>
        <table style="width: 100%; border-collapse: collapse; margin-bottom: 1rem;">
          <thead>
            <tr>
              <th>Equipo Local</th>
              <th>Resultado</th>
              <th>Equipo Visitante</th>
            </tr>
          </thead>
          <tbody>
        {% set faseActual = fase %}
    {% endif %}

    <tr>
        <td>
          <div style="text-align: center;">
            <strong>{{ partido.local ? partido.local.nombre : partido.aliasLocal }}</strong>
            {% if partido.estado == 'En Juego' %}
              <form method="post" action="{{ path('partido_accion_rapida', { id: partido.id }) }}">
                <input type="hidden" name="accion" value="gol_local">
                <button class="btn sumar">+1 Gol</button>
              </form>
              <form method="post" action="{{ path('partido_accion_rapida', { id: partido.id }) }}">
                <input type="hidden" name="accion" value="restar_local">
                <button class="btn restar">-1 Gol</button>
              </form>
            {% endif %}
          </div>
        </td>

        <td style="text-align: center;">
          {% if not partido.estado %}
            <form method="post" action="{{ path('partido_accion_rapida', { id: partido.id }) }}">
              <button class="btn iniciar" name="accion" value="iniciar">Iniciar</button>
            </form>
            <em>No iniciado</em>
          {% elseif partido.estado == 'En Juego' %}
            <strong>{{ partido.golesLocal }} - {{ partido.golesVisitante }}</strong><br/>
            <small>(min {{ partido.minutoEnJuego }}')</small><br/>
            <form method="post" action="{{ path('partido_accion_rapida', { id: partido.id }) }}">
              <button class="btn finalizar" name="accion" value="finalizar">Finalizar</button>
            </form>
            <form method="post" action="{{ path('partido_accion_rapida', { id: partido.id }) }}" style="display:inline;">
              <button class="btn icon-btn" name="accion" value="reiniciar" title="Reiniciar partido">‚ôªÔ∏è</button>
            </form>
          {% else %}
          {% if fase != 'Fase de Grupos' %}
            {% if partido.estado == 'Finalizado' and partido.golesLocal == partido.golesVisitante and not partido.penalties %}
                <form method="post" action="{{ path('partido_accion_rapida', { id: partido.id }) }}">
                    <input type="hidden" name="accion" value="penalties">
                    <label>
                        Penaltis (ej: 5-4): 
                        <input type="text" name="penalties" placeholder="5-4" required>
                    </label>
                    <button class="btn sumar">Guardar Penaltis</button>
                </form>
            {% endif %} 
          {% endif %}
           <strong>{{ partido.golesLocal }} - {{ partido.golesVisitante }}</strong><br/>
    
            {% if partido.penalties %}
                <em><small>üéØ Penaltis: {{ partido.penalties }}</small></em><br/>
            {% endif %}   
            <em>Finalizado</em><br/>                       
            <form method="post" action="{{ path('partido_accion_rapida', { id: partido.id }) }}" style="display:inline;">
              <button class="btn icon-btn" name="accion" value="reiniciar" title="Reiniciar partido">‚ôªÔ∏è</button>
            </form>
          {% endif %}
        </td>

        <td>
          <div style="text-align: center;">
            <strong>{{ partido.visitante ? partido.visitante.nombre : partido.aliasVisitante }}</strong>
            {% if partido.estado == 'En Juego' %}
              <form method="post" action="{{ path('partido_accion_rapida', { id: partido.id }) }}">
                <input type="hidden" name="accion" value="gol_visitante">
                <button class="btn sumar">+1 Gol</button>
              </form>
              <form method="post" action="{{ path('partido_accion_rapida', { id: partido.id }) }}">
                <input type="hidden" name="accion" value="restar_visitante">
                <button class="btn restar">-1 Gol</button>
              </form>
            {% endif %}
          </div>
        </td>
    </tr>

    {% if loop.last %}
        </tbody></table>
    {% endif %}
{% endfor %}



</body>
</html>

