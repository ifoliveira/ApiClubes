<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Administracion</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            background: #1e2a38;
            color: #fff;
            padding: 2rem 1rem;
        }

        h2, h3 {
            text-align: center;
            margin-bottom: 1rem;
        }

        table {
            width: 100%;
            max-width: 600px;
            margin: 0 auto;
            border-collapse: collapse;
            background: #2e3d4f;
            border-radius: 12px;
            overflow: hidden;
        }

        th, td {
            padding: 0.75rem;
            text-align: center;
        }

        th {
            background: #4CAF50;
        }

        tr:nth-child(even) {
            background-color: #3a4b5c;
        }

        tr:nth-child(odd) {
            background-color: #2e3d4f;
        }

        tr.destacado {
            background-color: #f9d923;
            color: #000;
            font-weight: bold;
        }

        @media (max-width: 600px) {
            th, td {
                padding: 0.5rem;
                font-size: 0.95rem;
            }
        }

        button {
            display: block;
            margin: 1.5rem auto 0;
            padding: 0.75rem 2rem;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 1rem;
            font-weight: bold;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.2s;
        }

        button:hover {
            background-color: #45a049;
            transform: scale(1.05);
        }

        button:active {
            transform: scale(0.98);
        }

        .acciones {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 0.4rem;
        margin-top: 0.5rem;
        }

        .btn {
        margin: 0.2rem auto;
        padding: 0.4rem 0.8rem;
        font-size: 0.85rem;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        transition: transform 0.1s;
        display: block;
        width: 90px;
        }

        .btn:active {
        transform: scale(0.95);
        }

        .btn.sumar {
        background-color: #4CAF50;
        color: white;
        }

        .btn.restar {
        background-color: #f44336;
        color: white;
        }

        .btn.finalizar {
        background-color: #9C27B0;
        color: white;
        }

        .btn.iniciar {
        background-color: #2196F3;
        color: white;
        }

      .btn.icon-btn {
          background: none;
          border: none;
          color: #ccc;
          cursor: pointer;
          font-size: 1.1rem;
          padding: 0.2rem 0.4rem;
          margin-top: 0.5rem;
          transition: color 0.3s ease;
      }

      .btn.icon-btn:hover {
          color: #f9d923;
      }        
    </style>
</head>
<body>

<h2>Seguimiento en Vivo – {{ torneo.nombre }}</h2>

<table style="width: 100%; border-collapse: collapse;">
  <thead>
    <tr>
      <th>Equipo Local</th>
      <th>Resultado</th>
      <th>Equipo Visitante</th>
    </tr>
  </thead>
  <tbody>
    {% for partido in partidos %}
      <tr>
        <td>
          <div style="text-align: center;">
            <strong>{{ partido.local.nombre }}</strong>
            {% if partido.estado == 'En Juego' %}
              <form method="post" action="{{ path('partido_accion_rapida', { id: partido.id }) }}">
                <input type="hidden" name="accion" value="gol_local">
                <button class="btn sumar">+1 Gol</button>
              </form>
              <form method="post" action="{{ path('partido_accion_rapida', { id: partido.id }) }}">
                <input type="hidden" name="accion" value="restar_local">
                <button class="btn restar">-1 Gol</button>
              </form>
            {% endif %}
          </div>
        </td>

        <td style="text-align: center;">
          {% if partido.estado == '' %}
            <form method="post" action="{{ path('partido_accion_rapida', { id: partido.id }) }}">
              <button class="btn iniciar" name="accion" value="iniciar">Iniciar</button>
            </form>
            <em>No iniciado</em>
          {% elseif partido.estado == 'En Juego' %}
            <strong>{{ partido.golesLocal }} - {{ partido.golesVisitante }}</strong><br/>
            <small>(min {{ partido.minutoEnJuego }})</small><br/>
            <form method="post" action="{{ path('partido_accion_rapida', { id: partido.id }) }}">
              <button class="btn finalizar" name="accion" value="finalizar">Finalizar</button>
            </form>
            <form method="post" action="{{ path('partido_accion_rapida', { id: partido.id }) }}" style="display:inline;">
              <button class="btn icon-btn" name="accion" value="reiniciar" title="Reiniciar partido">
                ♻️
              </button>
            </form>         
          {% else %}
            <strong>{{ partido.golesLocal }} - {{ partido.golesVisitante }}</strong><br/>
            <em>Finalizado</em>
            <form method="post" action="{{ path('partido_accion_rapida', { id: partido.id }) }}" style="display:inline;">
              <button class="btn icon-btn" name="accion" value="reiniciar" title="Reiniciar partido">
                ♻️
              </button>
            </form>                
          {% endif %}
        </td>

        <td>
          <div style="text-align: center;">
            <strong>{{ partido.visitante.nombre }}</strong>
            {% if partido.estado == 'En Juego' %}
              <form method="post" action="{{ path('partido_accion_rapida', { id: partido.id }) }}">
                <input type="hidden" name="accion" value="gol_visitante">
                <button class="btn sumar">+1 Gol</button>
              </form>
              <form method="post" action="{{ path('partido_accion_rapida', { id: partido.id }) }}">
                <input type="hidden" name="accion" value="restar_visitante">
                <button class="btn restar">-1 Gol</button>
              </form>
            {% endif %}
          </div>
        </td>
      </tr>
    {% endfor %}
  </tbody>
</table>

</body>
</html>

