{# templates/portada_torneo.html.twig #}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Torneo Veriña C.F. Alevín Fútbol 11</title>
    <style>
        * {
            box-sizing: border-box;
        }

        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: Arial, sans-serif;
        }

        .portada {
            position: relative;
            width: 100%;
            height: 100vh;
            overflow: hidden;
            
        }

        .portada img {
            width: 100%;
            height: 100%;
            object-fit: contain;
        }

        .overlay {
            position: absolute;
            top: 0;
            left: 0;
            height: 100%;
            width: 100%;
            background: transparent;; /* opcional para resaltar botón */
            display: flex;
            justify-content: center;
            align-items: flex-end;
            padding-bottom: 10vh;
        }

        .boton-entrar {
            background-color: #e63946;
            color: white;
            font-size: 1.3rem;
            padding: 1rem 2rem;
            border: none;
            border-radius: 1.5rem;
            text-decoration: none;
            box-shadow: 0 4px 8px rgba(0,0,0,0.3);
            transition: transform 0.2s ease, background-color 0.3s;
        }

        .boton-entrar:hover {
            transform: scale(1.05);
            background-color: #d62828;
        }

.demo-label {
    position: absolute;
    top: 10px;
    left: -30px;
    background: #ffcc00;
    color: #000;
    padding: 5px 40px;
    transform: rotate(-45deg);
    font-weight: bold;
    font-size: 14px;
    z-index: 1000;
    box-shadow: 0 0 5px rgba(0,0,0,0.3);
}        

    
    </style>
</head>
<body>

        {% if torneo.demo  %}
            <div class="demo-label">DEMO</div>
        {% endif %}    

    <div class="portada">

        <img src="{{ asset('images/Portada-verina_alevin_futbol_11v2.png') }}" alt="Portada torneo Veriña C.F.">
        <div class="overlay">
            <a class="boton-entrar" href="{{ path('torneo_entrada', { slug: torneo.slug }) }}">
                ENTRAR AL TORNEO
            </a>
        </div>
    </div>

</body>
</html>
