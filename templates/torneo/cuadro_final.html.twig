{% block title %}Cuadro Final del Torneo{% endblock %}

     
{% block body %}
        {% if torneo.demo  %}
            <div class="demo-label">DEMO</div>
        {% endif %} 
        {% if torneo.demo %}
        <button class="btn btn-sm btn-outline-info position-fixed"
                style="top: 15px; right: 15px; z-index: 1050;"
